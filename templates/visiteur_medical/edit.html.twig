{% extends 'base.html.twig' %}

{% block title %}Modifier un Visiteur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Modifier un Visiteur Médical</h1>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Formulaire de modification</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.nom, 'Nom') }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.prenom, 'Prénom') }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Email') }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.telephone, 'Téléphone') }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.role, 'Rôle') }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                    {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('visiteur_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
