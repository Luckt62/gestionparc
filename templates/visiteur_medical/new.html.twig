{% extends 'base.html.twig' %}

{% block title %}Ajouter un Visiteur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Ajouter un Visiteur Médical</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.nom, {
                            'label': 'Nom',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.prenom, {
                            'label': 'Prénom',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.email, {
                            'label': 'E-mail',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Ajouter
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('visiteur_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
