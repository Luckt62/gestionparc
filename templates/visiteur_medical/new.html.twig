{% extends 'base.html.twig' %}

{% block title %}Ajouter un Visiteur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Ajouter un Visiteur Médical</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3 input-group">
                        <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
                        {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus-fill"></i> Ajouter
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('visiteur_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
