{% extends 'base.html.twig' %}

{% block title %}Visiteur Médical{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails du Visiteur Médical</h1>

        <div class="card">
            <div class="card-header">
                <h5>Informations</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ visiteur_medical.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ visiteur_medical.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ visiteur_medical.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ visiteur_medical.email }}</td>
                        </tr>
                        <tr>
                            <th>Téléphone</th>
                            <td>{{ visiteur_medical.telephone }}</td>
                        </tr>
                        <tr>
                            <th>Rôle</th>
                            <td>{{ visiteur_medical.role }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_visiteur_medical_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_visiteur_medical_edit', {'id': visiteur_medical.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                </div>
            </div>
        </div>

        <!-- Formulaire de suppression -->
        <div class="mt-3">
            {{ include('visiteur_medical/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
