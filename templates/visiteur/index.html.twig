<!-- templates/visiteur/index.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Liste des visiteurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Liste des visiteurs</h1>
        <a href="{{ path('visiteur_add') }}" class="btn btn-primary mb-3">Ajouter un visiteur</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for visiteur in visiteurs %}
                    <tr>
                        <td>{{ visiteur.nom }}</td>
                        <td>{{ visiteur.prenom }}</td>
                        <td>{{ visiteur.email }}</td>
                        <td>{{ visiteur.telephone }}</td>
                        <td>
                            <a href="{{ path('visiteur_edit', {'id': visiteur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('visiteur_delete', {'id': visiteur.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce visiteur ?')">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun visiteur trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
