{% extends 'base.html.twig' %}

{% block title %}Entretien{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center my-4">Détails de l'Entretien</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ entretien.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Type</th>
                    <td>{{ entretien.type }}</td>
                </tr>
                <tr>
                    <th scope="row">Date</th>
                    <td>{{ entretien.date ? entretien.date|date('Y-m-d') : 'Non précisé' }}</td>
                </tr>
                <tr>
                    <th scope="row">Coût</th>
                    <td>{{ entretien.cout }} €</td>
                </tr>
                <tr>
                    <th scope="row">Pièce jointe</th>
                    <td>{{ entretien.pieceJointe ? entretien.pieceJointe : 'Aucune pièce jointe' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_entretien_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>

            <div>
                <a href="{{ path('app_entretien_edit', {'id': entretien.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>

                {{ include('entretien/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
