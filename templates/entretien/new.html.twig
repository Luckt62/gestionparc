{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel entretien{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center my-4">Créer un nouvel entretien</h1>

        <!-- Formulaire d'entretien -->
        <div class="card">
            <div class="card-header">
                <h5>Entrez les informations de l'entretien</h5>
            </div>
            <div class="card-body">
                {{ include('entretien/_form.html.twig') }}
            </div>
        </div>

        <!-- Bouton pour retourner à la liste -->
        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_entretien_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Enregistrer
            </button>
        </div>
    </div>
{% endblock %}
