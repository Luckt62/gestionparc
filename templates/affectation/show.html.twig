{% extends 'base.html.twig' %}

{% block title %}Détails de l'Affectation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Détails de l'Affectation</h1>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Informations de l'affectation</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ affectation.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de début</th>
                            <td>{{ affectation.dateDebut ? affectation.dateDebut|date('d/m/Y') : 'Non précisée' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de fin</th>
                            <td>{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : 'Non précisée' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_affectation_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                    </a>

                    <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                </div>
            </div>
        </div>

        {{ include('affectation/_delete_form.html.twig') }}
    </div>
{% endblock %}
