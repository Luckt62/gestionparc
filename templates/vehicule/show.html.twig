{% extends 'base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="display-4 text-center mb-4">Détails du Véhicule</h1>

        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ vehicule.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Marque</th>
                    <td>{{ vehicule.marque }}</td>
                </tr>
                <tr>
                    <th scope="row">Modèle</th>
                    <td>{{ vehicule.modele }}</td>
                </tr>
                <tr>
                    <th scope="row">Immatriculation</th>
                    <td>{{ vehicule.immatriculation }}</td>
                </tr>
                <tr>
                    <th scope="row">Kilométrage</th>
                    <td>{{ vehicule.kilometrage }}</td>
                </tr>
                <tr>
                    <th scope="row">Statut</th>
                    <td>
                        {% if vehicule.statut == 'Disponible' %}
                            <span class="badge bg-success">{{ vehicule.statut }}</span>
                        {% elseif vehicule.statut == 'En révision' %}
                            <span class="badge bg-warning">{{ vehicule.statut }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ vehicule.statut }}</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
        </div>

        {{ include('vehicule/_delete_form.html.twig') }}
    </div>
{% endblock %}
