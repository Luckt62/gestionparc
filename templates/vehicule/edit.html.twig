{% extends 'base.html.twig' %}

{% block title %}Modifier le véhicule{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <h1 class="text-center mb-4">Modifier le véhicule</h1>

        <!-- Formulaire de modification du véhicule -->
        <div class="card p-4 shadow-sm">
            <h4 class="card-title mb-3">Détails du véhicule</h4>
            {{ include('vehicule/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <!-- Retour à la liste des véhicules -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>

            <!-- Formulaire de suppression -->
            <div>
                {{ include('vehicule/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
